# ============================================
# TEST MODE CONFIGURATION EXAMPLE
# ============================================
# Use this file for testing WITHOUT sending actual emails/SMS
# Copy to your ITORO root .env when ready to test

# ============================================
# TEST MODE (ENABLED FOR TESTING)
# ============================================
SENDGRID_TEST_MODE=True
TWILIO_TEST_MODE=True

# ============================================
# Database (SQLite for testing)
# ============================================
DATABASE_URL=sqlite:///./iul_appointment_setter_test.db

# ============================================
# Redis (Local)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# SendGrid (Can use dummy values for TEST_MODE)
# ============================================
SENDGRID_API_KEY=your_key_here
SENDGRID_FROM_EMAIL=contact@okemokorie.com
SENDGRID_FROM_NAME=Oke Mokorie

# Warmup & Throttling
SENDGRID_WARMUP_MODE=True
SENDGRID_DAILY_CAP=50
SENDGRID_HOURLY_CAP=10
SENDGRID_BATCH_SIZE=20
SENDGRID_SEND_START_HOUR=8
SENDGRID_SEND_END_HOUR=17
SENDGRID_WEEKDAYS_ONLY=True

# ============================================
# Twilio (Can use dummy values for TEST_MODE)
# ============================================
TWILIO_ACCOUNT_SID=your_sid_here
TWILIO_AUTH_TOKEN=your_token_here
TWILIO_PHONE_NUMBER=+15551234567

# ============================================
# Calendly (Optional - not needed for basic testing)
# ============================================
CALENDLY_API_KEY=your_key_here
CALENDLY_EVENT_TYPE_UUID=your_uuid_here
CALENDLY_USER_URI=https://calendly.com/your-link

# ============================================
# LLM Provider (Use DeepSeek for lower cost testing)
# ============================================
DEEPSEEK_API_KEY=your_deepseek_key
OPENAI_API_KEY=your_openai_key
LLM_PROVIDER=deepseek

# GPT-4 for Inbound Reply Handling
HUMAN_NOTIFICATION_EMAIL=your-email@example.com
REPLY_CONFIDENCE_THRESHOLD=0.75
AUTO_REPLY_ENABLED=True
GPT4_MODEL=gpt-4-0125-preview
GPT4_TEMPERATURE=0.3
GPT4_MAX_TOKENS=300

# ============================================
# Workflow Settings
# ============================================
AUTO_START_CONVERSATIONS=True
TIER_THRESHOLD_FOR_AUTO_START=2
TEMPLATE_RANDOMIZATION=True

# ============================================
# Warmup Mode (Testing can start on any date)
# ============================================
WARMUP_MODE=True
WARMUP_START_DATE=2026-01-20

# ============================================
# Compliance
# ============================================
PHYSICAL_ADDRESS=123 Main St, City, State 12345
UNSUBSCRIBE_URL=https://example.com/unsubscribe

# ============================================
# Apify Configuration (Use real tokens if testing lead import)
# ============================================
APIFY_API_TOKEN=your_apify_token_1
APIFY_API_TOKEN_2=your_apify_token_2
APIFY_API_TOKEN_3=your_apify_token_3

APIFY_ACTOR_1=code_crafter~leads-finder
APIFY_ACTOR_2=pipelinelabs~lead-scraper-apollo-zoominfo-lusha-ppe

# Apify Search Parameters
APIFY_MAX_RUNS_PER_TICK=2
APIFY_INDUSTRIES=law,accounting,medical,consulting
APIFY_STATES=Texas, United States,Florida, United States
APIFY_EMPLOYEE_SIZES=10-19,20-50,51-100
APIFY_JOB_TITLES=Owner,CEO,President,Founder

# ============================================
# IMPORTANT NOTES FOR TESTING
# ============================================
# 1. SENDGRID_TEST_MODE=True prevents actual email sends
# 2. TWILIO_TEST_MODE=True prevents actual SMS sends
# 3. All messages are still logged to database with test_mode=True
# 4. Workflow, state machine, and templates work normally
# 5. Perfect for testing lead import, scoring, and conversation flow
# 6. When ready for production, set both to False
